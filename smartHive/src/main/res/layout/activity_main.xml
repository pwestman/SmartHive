<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="nottoobee.toobee.smarthive.MainActivity">

        <include
            layout="@layout/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/include" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layer_5"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/include">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hive_green"
                android:id="@+id/imageView4"
                android:onClick="getinfo"
                android:layout_above="@+id/imageView6"
                android:layout_alignParentEnd="true"
                android:visibility="visible"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="47dp" />

            <TextView
                android:text="@string/hive_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textStyle="normal|bold"
                android:layout_marginBottom="10dp"
                android:layout_above="@+id/imageView6"
                android:visibility="visible"
                android:layout_alignEnd="@+id/imageView5"
                android:layout_marginEnd="31dp" />

            <TextView
                android:text="@string/hive_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textStyle="normal|bold"
                android:layout_marginBottom="14dp"
                android:layout_above="@+id/imageView5"
                android:visibility="visible"
                android:layout_alignStart="@+id/textView3" />

            <TextView
                android:text="@string/hive_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textStyle="normal|bold"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignStart="@+id/imageView4"
                android:visibility="visible"
                android:layout_marginStart="34dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hive_green"
                android:id="@+id/imageView6"
                android:onClick="getinfo"
                android:layout_marginBottom="64dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:visibility="visible"
                android:layout_marginStart="36dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hive_green"
                android:id="@+id/imageView7"
                android:onClick="getinfo"
                android:visibility="visible"
                android:layout_alignBottom="@+id/imageView6"
                android:layout_alignStart="@+id/imageView4" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hive_green"
                android:id="@+id/imageView5"
                android:onClick="getinfo"
                android:visibility="visible"
                android:layout_alignTop="@+id/imageView4"
                android:layout_alignStart="@+id/imageView6" />

            <TextView
                android:text="@string/hive_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textStyle="normal|bold"
                android:visibility="visible"
                android:layout_alignBaseline="@+id/textView3"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignStart="@+id/textView2" />

        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee" />

</android.support.v4.widget.DrawerLayout>

